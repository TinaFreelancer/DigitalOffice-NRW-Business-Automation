.cta-button-secondary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 18px rgba(59,59,59,0.3);
}

/* Closing Section - Packages */
.packages-page .closing-section {
    padding: 4rem 0;
    background-color: rgba(127,129,122,0.03);
}

.packages-page .closing-content {
    display: flex;
