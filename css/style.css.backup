    }

    .contact-content {
        padding: 2.5rem 0;
    }

    .contact-grid {
        gap: 2rem;
    }

    .contact-info h2 {
        font-size: 1.25rem;
    }

    .contact-item a {
        font-size: 1rem;
    }

    .contact-form-wrapper {
        padding: 1.25rem;
    }

    .whatsapp-cta .cta-button-primary {
        font-size: 1rem;
        padding: 0.875rem 1.5rem;
