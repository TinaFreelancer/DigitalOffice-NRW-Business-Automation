/* ================================
   CONTACT PAGE STYLES
   ================================ */

/* Contact Hero */
.contact-hero {
    background-color: var(--color-white);
    padding: 3rem 0 2rem;
    text-align: center;
    border-bottom: 3px solid rgb(66,66,66);
}

.contact-hero .hero-subtitle {
    font-size: 1.25rem;
    font-weight: 400;
    margin-bottom: 0.5rem;
    color: var(--color-text-dark);
}

.contact-hero .hero-subtitle .highlight {
